<!DOCTYPE html>
<html>
  <head>
    <title>IssueReport</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p>
      <% if user_signed_in? %>
        <%= current_user.email %>
        <%= link_to "Sign out", sign_out_path %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
