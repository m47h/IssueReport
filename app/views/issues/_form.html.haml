= form_for @issue do |f|
  - if @issue.errors.any?
    #error_explanation
      %h2= '#{pluralize(@issue.errors.count, 'error')} prohibited this issue from being saved:'
      %ul
        - @issue.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :status
    = f.select :status, Issue::STATUS
  .field
    = f.label :priority
    = f.select :priority, Issue::PRIORITY
  .actions
    = f.submit 'Save'
