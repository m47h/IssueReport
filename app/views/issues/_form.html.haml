.modal-dialog{ role: 'document' }
  .modal-content
    .modal-header
      %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal',
      :type => 'button' }
        %span{ 'aria-hidden' => 'true' } Ã—
      %h4.modal-title#IssueModalLabel
        = action_name
        Category
    = bootstrap_form_for @issue, remote: true do |f|
      .modal-body
        .field
          = f.text_field :name
        .field
          = f.text_area :body
        .field
          = f.select :status, Issue::STATUS
        .field
          = f.select :priority, Issue::PRIORITY
      .modal-footer
        %button.btn.btn-default{ 'data-dismiss' => 'modal',
         :type => 'button' } Close
        = f.button :submit, type: 'submit', class: 'btn btn-primary'
