$('#Modal').modal('hide');
<% if action_name == 'create' %>
  $('#project_<%= @project.id %> > div').append('<%= escape_javascript(render "issue", issue: @issue) %>');
<% elsif action_name == 'update' %>
  $('#issue_<%= @issue.id %>').replaceWith('<%= escape_javascript(render "issue", issue: @issue) %>');
<% end %>
$('.flash').append('<%= escape_javascript(render "flash") %>');