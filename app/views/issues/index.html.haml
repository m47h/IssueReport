.row{ id: 'issues' }
  %h1
    Listing issues
    = link_to 'New Issue', new_issue_path, type: 'button',
    class: 'btn btn-xs btn-default', 'data-toggle'.to_sym => 'modal',
    'data-target'.to_sym => '#Modal', 'data-remote'.to_sym => 'true'
  - @issues.each do |issue|
    = render 'issue', issue: issue
