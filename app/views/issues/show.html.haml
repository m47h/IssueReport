.row{ id: 'issue_#{@issue.id}' }
  .panel.panel-primary
    .panel-heading
      %h3.panel-title
        = @issue.name
        = label_status(@issue.status)
        = label_priority(@issue.priority)
        = link_to 'New Issue', [:new, :issue], type: 'button', remote: true,
          class: 'btn btn-xs btn-success pull-right'
        = link_to 'Edit', [:edit, @issue], type: 'button', remote: true,
          class: 'btn btn-xs btn-warning pull-right'
    .panel-body
      = image_tag(@issue.image.url, width: 300)
      = @issue.body
.row{ id: 'issue_#{@issue.id}' }
  %h2= 'Comments'
  #comments
    = render @issue.comments
    %p
      = render 'comments/new'
